<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Información del Proyecto -->
    <groupId>awakelab-archetypes-springmvc-jpa</groupId>
    <artifactId>awakelab-archetypes-springmvc-jpa</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>maven-archetype</packaging>

    <!-- Nombre y Descripción del proyecto -->
    <name>${project.groupId}:${project.artifactId}</name>
    <description>Archetipo para la creación de proyectos bajo Spring Framework MVC y Java Persistence API (JPA)</description>

    <!-- Configuración de compilación -->
    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.archetype</groupId>
                <artifactId>archetype-packaging</artifactId>
                <version>3.2.0</version>
            </extension>
        </extensions>
    </build>
</project>